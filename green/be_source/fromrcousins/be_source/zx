createcruminternal(crumheight, enftype, allocated)
  INT crumheight;
  INT enftype;
  typecorecrum *allocated;
{
  typecorecrum *ptr;
  INT *eallocwithtag();
  unsigned crumsize;

	if (crumheight == 0) {
		switch (enftype) {
		  case GRAN:
			crumsize = sizeof(typecbc);
